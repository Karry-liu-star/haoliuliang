    <script>
        // 为评分输入框添加数值限制功能
        document.querySelectorAll('input[type="number"]').forEach(input => {
            input.addEventListener('change', function() {
                if (this.value > 5) this.value = 5;
                if (this.value < 0) this.value = 0;
                if (this.value === '') this.value = '';
            });
        });
    </script>


